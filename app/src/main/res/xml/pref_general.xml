<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="characters"
        android:defaultValue="@string/pref_default_IPAndPort"
        android:inputType="textCapWords"
        android:key="ticket_IPAndPort"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="IP And Port identifier" />


    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="characters"
        android:defaultValue="@string/pref_default_UID"
        android:inputType="textCapWords"
        android:key="ticket_UID"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_UID" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="4"
        android:entries="@array/pref_modo_comunicacion_titles"
        android:entryValues="@array/pref_modo_comunicacion_list_values"
        android:key="mode_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_mode_communication" />

</PreferenceScreen>
